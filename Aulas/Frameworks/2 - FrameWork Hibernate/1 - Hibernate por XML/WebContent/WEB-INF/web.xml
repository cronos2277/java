<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Hibernate</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>index</servlet-name>
    <jsp-file>/index.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>index</servlet-name>
    <url-pattern>/home.jsp</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>cadastro</servlet-name>
    <servlet-class>pkg.servlet.Cadastro</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>erro</servlet-name>
    <servlet-class>pkg.servlet.Erro</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>excluir</servlet-name>
    <servlet-class>pkg.servlet.Excluir</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>modificar</servlet-name>
    <servlet-class>pkg.servlet.Modificar</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>cadastro</servlet-name>
    <url-pattern>/new/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>erro</servlet-name>
    <url-pattern>/error/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>excluir</servlet-name>
    <url-pattern>/del/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>modificar</servlet-name>
    <url-pattern>/edit/*</url-pattern>
  </servlet-mapping>  
</web-app>